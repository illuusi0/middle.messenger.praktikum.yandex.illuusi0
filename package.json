    "@typescript-eslint/parser": "^8.48.0",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
